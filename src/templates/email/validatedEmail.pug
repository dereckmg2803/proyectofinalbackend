// src/templates/email/validatedEmail.pug
doctype html
html
  head
    meta(charset='UTF-8')
    title Email Verified
    style.
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        text-align: center;
      }
      h1 {
        color: #4caf50;
      }
      a.button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #4caf50;
        color: white;
        text-decoration: none;
        border-radius: 5px;
      }
  body
    .card
      h1 Email Verified Successfully!
      p Your email has been confirmed. You can now log in to your account.
